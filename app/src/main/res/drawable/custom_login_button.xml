<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:dither="true">

    <item android:state_pressed="true"><shape>
        <gradient
            android:angle="270"
            android:endColor="@color/custom_blue_button_pressed"
            android:startColor="@color/custom_blue_button_pressed" />
        <padding
            android:bottom="10dp" android:left="10dp"
            android:right="10dp" android:top="10dp" />
    </shape></item>

    <item><shape>
        <gradient
            android:angle="270"
            android:endColor="@color/custom_blue_button_unpressed"
            android:startColor="@color/custom_blue_button_unpressed" />
        <padding
            android:bottom="10dp" android:left="10dp"
            android:right="10dp" android:top="10dp" />
    </shape></item>

</selector>